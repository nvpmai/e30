<table class="ui celled table" id="admin_table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Headline</th>
      <th>Image</th>
      <th width="200px"></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.headline %></td>
        <td><%= image_tag article.featured_image, size: '100x80' %></td>
        <td>
          <a href="<%= edit_admin_article_path(article) %>" class="ui green button">Edit</a>
          <a data-method='delete' data-confirm='Are you sure you want to delete this?'
             class="ui red button" href="<%= admin_article_path(article) %>">Delete</a>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr><th colspan="3">
      <div class="ui right floated pagination" id="pagination">
        <%= paginate @articles %>
      </div>
    </th>
  </tr></tfoot>
</table>
