<div class="ui raised card">
  <div class="image article_link">
    <a href="<%= article_path(article) %>"></a>
    <img src="<%= article.featured_image %>">
  </div>
  <div class="content article_link">
    <a href="<%= article_path(article) %>"></a>
    <div class="header"><%= article.title %></div>
    <div class="description">
      <p><%= article.headline %></p>
    </div>
  </div>
  <div class="extra content">
    <span class="left floated like">
      <% liked = current_user && @liked_ids.include?(article.id) ? 'liked' : '' %>
      <% icon_click = current_user ? "toggleLike(#{article.id})" : '' %>
      <i class="like icon <%= liked %>" id="article_icon_<%= article.id %>" onclick="<%= icon_click %>"></i>
    </span>
  </div>
</div>
